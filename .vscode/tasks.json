{
  "tasks": [
    {
      "label": "clearOutput",
      "command": "clear"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "detail": "Task generated by Debugger."
    },

    {
      "label": "Run C/C++ compiled file",
      "command": "${fileDirname}/${fileBasenameNoExtension}",
      "dependsOrder": "sequence",
      "dependsOn": ["clearOutput", "C/C++: gcc build active file"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
